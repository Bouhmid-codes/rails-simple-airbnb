<div class="card h-100">
  <img src="https://images.unsplash.com/photo-1451153378752-16ef2b36ad05?q=80&w=2367&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="bd-placeholder-img card-img-top" width="100%" height="180">
  <div class="card-body pb-1">
    <h5 class="card-title"><%= flat.name %></h5>
    <p class="my-1"><strong><%= flat.address %></strong></p>
  </div>
  <div>
    <ul class="list-inline ms-3 mb-1">
      <li class="list-inline-item"><i class="fa-solid fa-user-group"></i><%= flat.number_of_guests %></li>
      <li class="list-inline-item"><i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %></li>
    </ul>
    <div class="card-body pt-1">
      <a href="#" class="btn btn-outline-dark me-1">Info</a>
      <a href="#" class="btn btn-outline-success me-1">Edit</a>
      <a href="#" class="btn btn-outline-danger">Delete</a>
    </div>
  </div>
</div>
