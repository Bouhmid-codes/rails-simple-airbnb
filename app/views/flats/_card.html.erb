<div class="card h-100">
  <%= image_tag flat.img_url, width:'100%', height:'180'%>
  <div class="card-body pb-1">
    <h5 class="card-title"><%= flat.name %></h5>
    <p class="my-1"><strong><%= flat.address %></strong></p>
  </div>
  <div>
    <ul class="list-inline ms-3 mb-1">
      <li class="list-inline-item"><i class="fa-solid fa-user-group"></i><%= flat.number_of_guests %></li>
      <li class="list-inline-item"><i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %></li>
    </ul>
    <div class="card-body pt-1">
      <%= link_to "Info", flat_path(flat), class:"btn btn-outline-dark me-1"%>
      <%= link_to "Edit",  edit_flat_path(flat), class:"btn btn-outline-success me-1"%>
      <%= link_to "Delete", flat_path(flat),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class:"btn btn-outline-danger"
      %>
    </div>
  </div>
</div>
