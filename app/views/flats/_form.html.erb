<div class="container my-4 border border-light border border-3">
  <h1>Add a new Flat</h1>
  <%= simple_form_for flat do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.input :img_url %>
    <div class="d-flex justify-content-between">
      <%= f.button :submit, class: 'btn btn-outline-dark mb-2' %>
      <%= link_to "← Back to all flats", flats_path, class: 'btn btn-success mb-2' %>
    </div>
  <% end %>
</div>
